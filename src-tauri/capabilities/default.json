{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "webview:default",
    "app:default",
    "resources:default",
    "image:default",
    "menu:default",
    "tray:default",
    "fs:default",
    "dialog:allow-open",
    "fs:allow-read-file",
    {
      "identifier": "fs:allow-exists",
      "allow": [{"path": "**"}]
    },
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            {
              "validator": "\\S+"
            }
          ],
          "cmd": "",
          "name": "binaries/extract-pdf-pages",
          "sidecar": true
        }
      ]
    }
  ]
}